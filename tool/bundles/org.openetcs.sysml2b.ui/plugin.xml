<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openetcs.sysml2b.ui.handlers.TransformToClassicalB"
            commandId="org.openetcs.sysml2b.ui.transformtoclassicalb">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.papyrus.editor.category"
            id="org.openetcs.sysml2b.ui.transformtoclassicalb"
            name="Transform a SysML project into Classical B">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup">
         <command
               commandId="org.openetcs.sysml2b.ui.transformtoclassicalb"
               label="Transform to Classical B"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
